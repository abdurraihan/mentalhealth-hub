{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM"], 
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
 
  "include": ["src/**/*", "types/**/*"]

}
